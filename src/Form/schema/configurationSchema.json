{
  "type": "object",
  "patternProperties": {
    "^(?!validation|fieldType$).*$": {
      "type": "object",
      "if": {
        "properties": {
          "fieldType": {
            "const": "select"
          }
        }
      },
      "then": {
        "required": [
          "customProperties"
        ],
        "properties": {
          "customProperties": {
            "required": [
              "options"
            ],
            "type": "object",
            "properties": {
              "options": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": [
                    "label",
                    "value"
                  ],
                  "properties": {
                    "description": {
                      "type": "string"
                    },
                    "helperText": {
                      "type": "string"
                    },
                    "label": {
                      "type": "string"
                    },
                    "value": {
                      "anyOf": [
                        {
                          "type": "number"
                        },
                        {
                          "type": "string"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "else": {
        "properties": {
          "customProperties": {
            "type": "object"
          }
        }
      },
      "properties": {
        "fieldType": {
          "type": "string"
        },
        "validation": {
          "type": "object",
          "properties": {
            "required": {
              "type": "boolean"
            },
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            },
            "minLength": {
              "type": "number"
            },
            "maxLength": {
              "type": "number"
            },
            "pattern": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "fieldType"
      ]
    }
  },
  "additionalProperties": false
}